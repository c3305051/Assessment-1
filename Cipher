#include<stdio.h>

int main()
{
                            // ./a.out in terminal to use scanf()
int key = 4,x;                               // the rotation key shifts the characters between -25 and 25
char message[100], character;          // initialises an array to hold the value of the enters characters of the message to be encrypted

printf("enter text for encryption \n");
scanf("%s",message);

for(x=0; message[x] != '\0'; x++)
{
    if(message[x]==' '){
        message[x]=message[x] - key;
    }
    if(message[x] + key >= 'z')
    {
        message[x]=message[x] -'z' + 'a' -1;
    }

    character = (char)((int)message[x] + key);
    printf("%c",character);
    
}

    


return 0;
}
