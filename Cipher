char message[100], character,key[26];           // initialises an array to hold the value of the enters characters of the message to be encrypted

printf("enter text for encryption \n");
scanf("%s",message);

printf("enter substitution key \n");
scanf("%s", key);

for(x=0 ; message[x] != '\0' ; x++)
{
   
//   messx= (int)message[x]; 
   newchar = message[x]-65;
//   printf("%d\n", newchar);
  printf("%c",key[newchar]);
    
    
}
    


return 0;
}
#include<stdio.h>
#include <stdlib.h> 
int main()
{
            // for decryption just put the key as negative
                                        // ./a.out in terminal to use scanf()
int key=1, message_length=0,ch,enc_ch,encmess_length=0;                          // the rotation key shifts the characters between -25 and 25
char letter;          // initialises an array to hold the value of the enters characters of the message to be encrypted


//printf("enter key");
scanf("%d",&key);
FILE *message;
FILE *encmessage;
message=fopen("message.txt","r");
encmessage=fopen("encmessage.txt","w");

/*while(1){
    ch = fgetc(message);
    if (ch== EOF){
        break;
    }
    message_length++;

    enc_ch=fgetc(encmessage) ;
    if(enc_ch==EOF){
        break;
    }
    encmess_length++;
 }
 printf("%d",encmess_length);
printf("%d",message_length);
*/
    while(feof(message)==0)
        {
        fscanf(message,"%c",&letter);  
   
        if( letter <'A' || letter>'Z')
            {
               letter=letter - key;
           }
        else if(letter + key > 'Z')
            {
            letter=letter -'Z' + 'A' -1;
            }
         else if(letter + key < 'A' && letter != 32)
            {
            letter=letter + key + 26;
            }    
            letter=letter + key;
            fprintf(encmessage,"%C",letter);
        }   



   if( message == NULL )
    {
       printf("Error while opening the file.\n");   
    }

return 0;
}
