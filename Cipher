#include<stdio.h>

int main()
{
                                                      // ./a.out in terminal to use scanf()
int key = 3,x;                                        // the rotation key shifts the characters between -25 and 25
char message[100] = "this is a test";       // initialises an array to hold the value of characters of the message to be encrypted
char character;                             // initialise variable to hold value of message charaters after encryption


for(x=0; message[x] != '\0'; x++)           // for loop to encrypt message up until the string termination given by '\0'
{
    character = (char)((int)message[x] + key);  //
    printf("%c",character);                     //
    
}

return 0;
}
